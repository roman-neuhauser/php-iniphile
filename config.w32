ARG_ENABLE(
  "iniphile"
, "iniphile extension"
, "yes"
);

if (PHP_INIPHILE != "no") {
  if (!CHECK_HEADER_ADD_INCLUDE('boost/spirit.hpp', 'CFLAGS_INIPHILE')) {
    ERROR('The INIPHILE extension requires Boost C++ libraries.');
  }
  EXTENSION(
    "iniphile"
  , "php_iniphile.cpp iniphile.cpp"
  , null
  , '/EHsc'
  );
  AC_DEFINE(
    'HAVE_INIPHILE'
  , 1
  , 'Have iniphile support'
  );
}

